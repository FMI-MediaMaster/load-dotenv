{
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.stub.ts",
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
    },
    "compilerOptions": {
        "outDir": "./dist/"
    }
}

